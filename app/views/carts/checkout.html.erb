<a href="/">Dashboard</a>
<p>Cart Items</p>

<table class="table">
	<thead>
      <tr>
        <th>Item name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
<% @cart.line_items.each do |item| %>
<tr>
	<td><%= item.name %> </td>

	<td><a href="#" class="quantity"><%= item.quantity %></a></td>
	<td><%= item.price %></td>
	<td><%= link_to "Remove from cart", "RemoveFromCart/#{item.id}", :method => :delete %></td>
</tr>
<% end %>
</table>
<div>
<p><%= link_to "Submit Cart", "/order/#{@cart.id}", :method => :post %></p>
</div>
